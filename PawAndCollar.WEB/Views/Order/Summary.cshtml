@model OrderSummaryViewModel
<form method="post" asp-controller="Order" asp-action="Summary">
    <div class="row">
        <div class="col-md-6">
            <h4>Shipping Details</h4>
            <hr />
            <div>
                <label asp-for="CustomerName">Name:</label>
                <input asp-for="CustomerName" class="form-control" required />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Phone">Phone:</label>
                <input asp-for="Phone" class="form-control" required />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ShippingAddress">Address:</label>
                <input asp-for="ShippingAddress" class="form-control" required />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="PaymentMethod">Payment Method:</label>
                <select asp-for="PaymentMethod" asp-items="Model.PaymentMethods" class="form-control"></select>
            </div>
        </div>
        <div class="col-md-6">
            <h4>Order Summary</h4>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Overall Product Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderedItems)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                            <td>@(item.Price * item.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
                <strong>Total Price: @Model.TotalAmount</strong>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary">Place Order</button>
        </div>
    </div>
</form>
