@model OrderDetailsViewModel

<h2>Order Summary</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Shipping Details</h4>
        <hr />
        <div>
            <label asp-for="CustomerName">Name:</label>
            <input asp-for="CustomerName" class="form-control" required />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
        <!-- Add other shipping details here if needed -->
    </div>
    <div class="col-md-6">
        <h4>Order Summary</h4>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Overall Product Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderedItems)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>@(item.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <strong>Total Price: @Model.TotalPrice</strong>
        </div>
        <div>
            <strong>Status: @Model.Status</strong>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12 text-center">
        <button type="submit" class="btn btn-primary">Place Order</button>
    </div>
</div>
